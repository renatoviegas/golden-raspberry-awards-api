{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",    
    "outDir": "./dist",
    "rootDir": "./src",                            
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false                           
  },
  "include": ["src/**/*"]
}
